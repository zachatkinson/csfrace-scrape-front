---
/**
 * JobModal - Modal component for displaying job details
 * Single Responsibility: Handle job detail modal display
 * DRY: Uses BaseModal for consistent behavior and animations
 */
import BaseModal from '../common/BaseModal.astro';
---

<BaseModal 
  id="job-modal"
  closeButtonId="close-modal"
  maxWidth="max-w-2xl"
  className=""
>
  <div class="glass-card p-6 max-h-[90vh] overflow-y-auto">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-white">Job Details</h2>
      <button 
        id="close-modal" 
        class="glass-button p-2 text-white/90 hover:text-white"
        aria-label="Close modal"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <div id="job-details-content">
      <!-- Job details populated by DashboardManager -->
    </div>
  </div>
</BaseModal>