<!-- =============================================================================
     OAUTH PROVIDER ICON (Astro MCP Compliant)
     Single Responsibility: Display SVG icon for OAuth provider
     ============================================================================= -->
<svg
  class={className}
  viewBox={iconConfig.viewBox}
  data-provider={provider}
  role="img"
  aria-label={`${provider} icon`}
>
  {iconConfig.gradients && !monochrome && (
    <defs>
      {iconConfig.gradients.map((gradient) => {
        if (gradient.type === "radialGradient") {
          return (
            <radialGradient
              id={gradient.id}
              cx={gradient.cx}
              cy={gradient.cy}
              r={gradient.r}
              fx={gradient.fx}
              fy={gradient.fy}
              gradientTransform={gradient.gradientTransform}
            >
              {gradient.stops.map((stop) => (
                <stop offset={stop.offset} stop-color={stop.color} />
              ))}
            </radialGradient>
          );
        } else if (gradient.type === "linearGradient") {
          return (
            <linearGradient
              id={gradient.id}
              x1={gradient.x1}
              y1={gradient.y1}
              x2={gradient.x2}
              y2={gradient.y2}
              gradientTransform={gradient.gradientTransform}
            >
              {gradient.stops.map((stop) => (
                <stop offset={stop.offset} stop-color={stop.color} />
              ))}
            </linearGradient>
          );
        }
      })}
    </defs>
  )}
  {iconConfig.paths.map((path) => (
    <path d={path.d} fill={monochrome ? "currentColor" : path.fill} />
  ))}
</svg>

<style>
  /* OAuth Provider Icon Styles */
  svg[data-provider] {
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
