---
// Simple version display component to test workflow
interface Props {
  position?: 'header' | 'footer';
  theme?: 'light' | 'dark';
}

const { position = 'footer', theme = 'light' } = Astro.props;
const version = '5.12.0'; // Will be updated by semantic release
---

<div class={`version-display ${position} ${theme}`}>
  <span class="version-text">v{version}</span>
</div>

<style>
  .version-display {
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    font-size: 0.75rem;
    opacity: 0.7;
    user-select: none;
  }
  
  .version-display.header {
    padding: 0.25rem 0.5rem;
  }
  
  .version-display.footer {
    padding: 0.5rem;
    text-align: center;
  }
  
  .version-display.light {
    color: #6b7280;
  }
  
  .version-display.dark {
    color: #9ca3af;
  }
  
  .version-text {
    transition: opacity 0.2s ease;
  }
  
  .version-display:hover .version-text {
    opacity: 1;
  }
</style>