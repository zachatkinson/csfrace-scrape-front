        }
      };

      // Settings panel functionality now handled by SettingsPanel.astro custom element
      // All modal behavior moved to BaseModalManager for DRY/SOLID architecture
    </script>

    <!-- ASTRO MCP BEST PRACTICE: Global SSE Service in MainLayout -->
    <script>
      import { formatTimestamp } from '/src/utils/timezone.ts';
      import { getApiBaseUrl } from '../../constants/api.ts';

      // SINGLETON PATTERN: Global health SSE service (Astro MCP best practice)
      if (!window.__healthSSEService) {
        console.log('üöÄ MainLayout: Creating global SSE health service');

        window.__healthSSEService = {
          eventSource: null,
          isConnected: false,
          retryCount: 0,
          maxRetries: 5,
          retryDelay: 5000,

          async connect() {
            if (this.eventSource && this.isConnected) {
              console.log('‚úÖ SSEService: Already connected, skipping');
              return;
            }

            try {
              const backendUrl = import.meta.env.PUBLIC_BACKEND_SSE_URL || getApiBaseUrl();
              const sseUrl = `${backendUrl}/health/stream`;
              console.log('üîó SSEService: Establishing connection to:', sseUrl);
              this.eventSource = new EventSource(sseUrl);

              this.eventSource.onopen = () => {
                this.isConnected = true;
                this.retryCount = 0;
                console.log('‚úÖ SSEService: Connection established');
              };

              this.eventSource.addEventListener('service-update', async (event) => {
                try {
                  const serviceUpdate = JSON.parse(event.data);
                  console.log('üéØ SSEService: Service update received:', serviceUpdate);

                  // Update nanostore (Astro MCP pattern)
                  const { updateHealthData, getCurrentHealthData } = await import('/src/stores/healthStore.ts');
                  const updateTime = new Date(serviceUpdate.timestamp || Date.now());

                  let services = {};

                  if (serviceUpdate.services) {
                    services = serviceUpdate.services;
                  } else if (serviceUpdate.service && serviceUpdate.status) {
                    const currentData = getCurrentHealthData();
                    services = { ...currentData.services };

                    services[serviceUpdate.service] = {
                      status: serviceUpdate.status === 'healthy' ? 'up' : serviceUpdate.status,
                      message: `${serviceUpdate.service} service updated`,
                      metrics: {
                        responseTime: serviceUpdate.data?.response_time_ms || 0,
                        ...serviceUpdate.data
                      },
                      timestamp: updateTime
                    };
                  }

                  const healthData = {
                    services,
                    overallStatus: {
                      status: 'up',
                      text: 'Services Updated',
                      summary: 'Services updated via SSE',
                      color: 'bg-green-500'
                    },
                    metadata: {
                      timestamp: updateTime.getTime(),
                      isPolling: false,
                      isVisible: true,
                      lastUpdateFormatted: formatTimestamp(updateTime)
                    }
                  };

                  updateHealthData(healthData);
                } catch (error) {
                  console.error('‚ùå SSEService: Error processing update:', error);
                }
              });

              this.eventSource.onerror = (error) => {
                this.isConnected = false;
                console.error('‚ùå SSEService: Connection error:', error);
                this.handleRetry();
              };

            } catch (error) {
              console.error('üí• SSEService: Failed to create connection:', error);
              this.handleRetry();
            }
          },

          handleRetry() {
            if (this.retryCount < this.maxRetries) {
              const delay = this.retryDelay * Math.pow(2, this.retryCount);
              this.retryCount++;
              console.log(`üîÑ SSEService: Retrying in ${delay}ms (${this.retryCount}/${this.maxRetries})`);
              setTimeout(() => this.connect(), delay);
            }
          },

          disconnect() {
            if (this.eventSource) {
              this.eventSource.close();
              this.eventSource = null;
            }
            this.isConnected = false;
          }
        };

        // Initialize SSE service
        document.addEventListener('DOMContentLoaded', () => {
          window.__healthSSEService.connect();
        });

        // Cleanup on unload
        window.addEventListener('beforeunload', () => {
          window.__healthSSEService.disconnect();
        });
      }
    </script>

    <!-- ASTRO MCP BEST PRACTICE: Global Job SSE Service in MainLayout (DRY pattern) -->
    <script>
      import { getApiBaseUrl } from '../../constants/api.ts';

      // SINGLETON PATTERN: Global job SSE service (following same pattern as health SSE)
      if (!window.__jobSSEService) {
        console.log('üöÄ MainLayout: Creating global SSE job service');

        window.__jobSSEService = {
          eventSource: null,
          isConnected: false,
          retryCount: 0,
          maxRetries: 5,
          retryDelay: 5000,

          async connect() {
            if (this.eventSource && this.isConnected) {
              console.log('‚úÖ JobSSEService: Already connected, skipping');
              return;
            }

            try {
              const backendUrl = import.meta.env.PUBLIC_BACKEND_SSE_URL || getApiBaseUrl();
              const sseUrl = `${backendUrl}/jobs/stream`;
              console.log('üîó JobSSEService: Establishing connection to:', sseUrl);
              this.eventSource = new EventSource(sseUrl);

              this.eventSource.onopen = () => {
                this.isConnected = true;
                this.retryCount = 0;
                console.log('‚úÖ JobSSEService: Connection established');
              };

              this.eventSource.addEventListener('job-update', async (event) => {
                try {
                  const jobUpdate = JSON.parse(event.data);
                  console.log('üéØ JobSSEService: Job update received:', jobUpdate);

                  // Dispatch custom event for React components to listen to
                  const jobUpdateEvent = new CustomEvent('jobSSEUpdate', {
                    detail: { jobUpdate }
                  });
                  window.dispatchEvent(jobUpdateEvent);

                  // Also dispatch traditional jobsDataUpdate for existing components
                  const refreshEvent = new CustomEvent('jobsDataRefresh', {
                    detail: { source: 'sse', jobUpdate }
                  });
                  window.dispatchEvent(refreshEvent);

                } catch (error) {
                  console.error('‚ùå JobSSEService: Error processing job update:', error);
                }
              });

              this.eventSource.onerror = (error) => {
                this.isConnected = false;
                console.error('‚ùå JobSSEService: Connection error:', error);
                this.handleRetry();
              };

            } catch (error) {
              console.error('üí• JobSSEService: Failed to create connection:', error);
              this.handleRetry();
            }
          },

          handleRetry() {
            if (this.retryCount < this.maxRetries) {
              const delay = this.retryDelay * Math.pow(2, this.retryCount);
              this.retryCount++;
              console.log(`üîÑ JobSSEService: Retrying in ${delay}ms (${this.retryCount}/${this.maxRetries})`);
              setTimeout(() => this.connect(), delay);
            }
          },

          disconnect() {
            if (this.eventSource) {
              this.eventSource.close();
              this.eventSource = null;
            }
            this.isConnected = false;
          }
        };

        // Initialize job SSE service
        document.addEventListener('DOMContentLoaded', () => {
          window.__jobSSEService.connect();
        });

        // Cleanup on unload
        window.addEventListener('beforeunload', () => {
          window.__jobSSEService.disconnect();
        });
      }
    </script>

    <!-- ASTRO MCP BEST PRACTICE: Health Status Initialization -->
    <!-- Following DRY/SOLID: Single EventDrivenFooterStatus component with SSE -->
    <script>
      import { createRoot } from 'react-dom/client';
      import { EventDrivenFooterStatus } from '../health/EventDrivenFooterStatus.tsx';

      // Initialize React component for health status (Astro MCP compliant)
      document.addEventListener('DOMContentLoaded', () => {
        const container = document.getElementById('health-status-container');
        if (container && !container.dataset.initialized) {
          console.log('üöÄ MainLayout: Initializing EventDrivenFooterStatus React component');
          const root = createRoot(container);
          root.render(EventDrivenFooterStatus());
          container.dataset.initialized = 'true';
        }
