        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: -1;
        pointer-events: none;
      }
    </style>

    <!-- Modal and Panel JavaScript -->
    <script>
      // Initialize global timing constants
      window.CSFRACE_TIMING = {
        JOB: {
          STATUS_CHECK_INTERVAL: 2000,
          TIMEOUT: 300000,
          POLL_INTERVAL: 2000
        },
        API: {
          DEFAULT_TIMEOUT: 30000,
          RETRY_DELAY_BASE: 1000,
