}));

console.log('ðŸŽ¯ CompactHealthStatus: Initial load with loading states (persistent across navigation)');

// Sort by priority for optimal display order (fastest services first)
healthResults.sort((a, b) => a.config.priority - b.config.priority);

console.log('ðŸš€ OptimizedCompactHealthStatus: Individual service indicators only');
