---
// Comprehensive System Health Dashboard
import MainLayout from '../components/layout/MainLayout.astro';
---

<MainLayout title="System Health Dashboard" description="Comprehensive monitoring and diagnostics for all system services">

  <!-- Refresh Button Animation Styles -->
  <style>
    .refresh-pulse {
      animation: refresh-pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    @keyframes refresh-pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
    }

    .status-circle {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 8px;
    }

    .status-up { background-color: #10b981; }
    .status-degraded { background-color: #f59e0b; }
    .status-down { background-color: #ef4444; }
    .status-error { background-color: #ef4444; }
  </style>

  <!-- Main Dashboard Container -->
  <div class="container mx-auto px-4 py-8 space-y-8">

    <!-- Dashboard Header -->
    <div class="glass-card p-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">System Health Dashboard</h1>
          <p class="text-white/70">Real-time monitoring and diagnostics for all system services</p>
        </div>
        <button
          id="refresh-all-btn"
          class="glass-button px-4 py-2 bg-blue-500/20 text-blue-300 hover:bg-blue-500/30 border border-blue-500/50 hover:border-blue-500/70 rounded-lg transition-all duration-200 flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Refresh All
        </button>
      </div>

      <!-- Overall Status -->
      <div class="flex items-center gap-4 p-4 bg-black/20 rounded-lg">
        <div class="flex items-center">
          <span id="overall-status" class="status-circle status-up"></span>
          <span class="text-white font-medium">Overall Status</span>
        </div>
        <span id="overall-message" class="text-white/80">Loading...</span>
        <span id="overall-last-updated" class="text-white/60 text-sm ml-auto">Never</span>
      </div>
    </div>

    <!-- Service Status Cards - 4 Card Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

      <!-- Frontend Service -->
      <div class="glass-card p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-white">Frontend</h3>
          <div class="flex items-center">
            <span id="frontend-status" class="status-circle status-up"></span>
            <span class="text-sm text-white/70">Status</span>
          </div>
        </div>

        <div class="space-y-3">
          <div>
            <span class="text-white/60 text-sm">Message:</span>
            <div id="frontend-message" class="text-white">Frontend Active</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Response Time:</span>
            <div id="frontend-latency" class="text-white font-mono">-</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Last Check:</span>
            <div id="frontend-last-updated" class="text-white/80 text-sm">Never</div>
          </div>
        </div>

        <button
          id="refresh-frontend-btn"
          class="w-full mt-4 glass-button px-3 py-2 text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200"
        >
          Refresh Frontend
        </button>
      </div>

      <!-- Backend Service -->
      <div class="glass-card p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-white">Backend</h3>
          <div class="flex items-center">
            <span id="backend-status" class="status-circle status-up"></span>
            <span class="text-sm text-white/70">Status</span>
          </div>
        </div>

        <div class="space-y-3">
          <div>
            <span class="text-white/60 text-sm">Message:</span>
            <div id="backend-message" class="text-white">Loading...</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Response Time:</span>
            <div id="backend-latency" class="text-white font-mono">-</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Last Check:</span>
            <div id="backend-last-updated" class="text-white/80 text-sm">Never</div>
          </div>
        </div>

        <button
          id="refresh-backend-btn"
          class="w-full mt-4 glass-button px-3 py-2 text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200"
        >
          Refresh Backend
        </button>
      </div>

      <!-- PostgreSQL Database -->
      <div class="glass-card p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-white">PostgreSQL</h3>
          <div class="flex items-center">
            <span id="postgresql-status" class="status-circle status-up"></span>
            <span class="text-sm text-white/70">Status</span>
          </div>
        </div>

        <div class="space-y-3">
          <div>
            <span class="text-white/60 text-sm">Message:</span>
            <div id="postgresql-message" class="text-white">Via Backend Health Check</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Response Time:</span>
            <div id="postgresql-latency" class="text-white font-mono">-</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Last Check:</span>
            <div id="postgresql-last-updated" class="text-white/80 text-sm">Never</div>
          </div>
        </div>

        <button
          id="refresh-postgresql-btn"
          class="w-full mt-4 glass-button px-3 py-2 text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200"
        >
          Refresh PostgreSQL
        </button>
      </div>

      <!-- Redis Cache -->
      <div class="glass-card p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-white">Redis</h3>
          <div class="flex items-center">
            <span id="redis-status" class="status-circle status-up"></span>
            <span class="text-sm text-white/70">Status</span>
          </div>
        </div>

        <div class="space-y-3">
          <div>
            <span class="text-white/60 text-sm">Message:</span>
            <div id="redis-message" class="text-white">Via Backend Health Check</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Response Time:</span>
            <div id="redis-latency" class="text-white font-mono">-</div>
          </div>

          <div>
            <span class="text-white/60 text-sm">Last Check:</span>
            <div id="redis-last-updated" class="text-white/80 text-sm">Never</div>
          </div>
        </div>

        <button
          id="refresh-redis-btn"
          class="w-full mt-4 glass-button px-3 py-2 text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200"
        >
          Refresh Redis
        </button>
      </div>
    </div>

    <!-- Diagnostics Panel -->
    <div class="glass-card p-6">
      <h3 class="text-xl font-semibold text-white mb-4">System Diagnostics</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="text-lg font-medium text-white mb-3">Quick Tests</h4>
          <div class="space-y-2">
            <button id="test-connectivity-btn" class="w-full glass-button px-4 py-2 text-left text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200">
              Test Network Connectivity
            </button>
            <button id="test-latency-btn" class="w-full glass-button px-4 py-2 text-left text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200">
              Test API Latency
            </button>
            <button id="test-cors-btn" class="w-full glass-button px-4 py-2 text-left text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200">
              Test CORS Policies
            </button>
          </div>
        </div>

        <div>
          <h4 class="text-lg font-medium text-white mb-3">Test Results</h4>
          <div id="diagnostic-results" class="space-y-2 text-sm text-white/80">
            <div>Ready to run diagnostics...</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Auto-Refresh Settings -->
    <div class="glass-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg font-semibold text-white">Auto-Refresh</h3>
          <p class="text-white/60 text-sm">Automatically refresh health status every 30 seconds</p>
        </div>
        <label class="relative inline-flex items-center cursor-pointer">
          <input id="auto-refresh-toggle" type="checkbox" class="sr-only peer">
          <div class="w-11 h-6 bg-gray-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
        </label>
      </div>
    </div>

    <!-- System Performance Overview -->
    <div class="glass-card p-6">
      <h3 class="text-xl font-semibold text-white mb-4">System Performance Overview</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
        <!-- CPU Usage -->
        <div class="bg-black/20 p-4 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <span class="text-white/60 text-sm">CPU Usage</span>
            <span id="cpu-usage" class="text-white font-bold">--%</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div id="cpu-progress" class="bg-blue-600 h-2 rounded-full" style="width: 0%"></div>
          </div>
        </div>

        <!-- Memory Usage -->
        <div class="bg-black/20 p-4 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <span class="text-white/60 text-sm">Memory Usage</span>
            <span id="memory-usage" class="text-white font-bold">--%</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div id="memory-progress" class="bg-green-600 h-2 rounded-full" style="width: 0%"></div>
          </div>
        </div>

        <!-- Disk Usage -->
        <div class="bg-black/20 p-4 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <span class="text-white/60 text-sm">Disk Usage</span>
            <span id="disk-usage" class="text-white font-bold">--%</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div id="disk-progress" class="bg-yellow-600 h-2 rounded-full" style="width: 0%"></div>
          </div>
        </div>

        <!-- Network I/O -->
        <div class="bg-black/20 p-4 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <span class="text-white/60 text-sm">Network I/O</span>
            <span id="network-io" class="text-white font-bold">-- KB/s</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div id="network-progress" class="bg-purple-600 h-2 rounded-full" style="width: 0%"></div>
          </div>
        </div>
      </div>

      <!-- Performance Metrics -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div>
          <h4 class="text-lg font-medium text-white mb-3">Response Times</h4>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-white/60">Average Response:</span>
              <span id="avg-response" class="text-white font-mono">-- ms</span>
            </div>
            <div class="flex justify-between">
              <span class="text-white/60">P95 Response:</span>
              <span id="p95-response" class="text-white font-mono">-- ms</span>
            </div>
            <div class="flex justify-between">
              <span class="text-white/60">Max Response:</span>
              <span id="max-response" class="text-white font-mono">-- ms</span>
            </div>
          </div>
        </div>

        <div>
          <h4 class="text-lg font-medium text-white mb-3">System Load</h4>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-white/60">Active Connections:</span>
              <span id="active-connections" class="text-white font-mono">--</span>
            </div>
            <div class="flex justify-between">
              <span class="text-white/60">Queue Length:</span>
              <span id="queue-length" class="text-white font-mono">--</span>
            </div>
            <div class="flex justify-between">
              <span class="text-white/60">Uptime:</span>
              <span id="system-uptime" class="text-white font-mono">--</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Raw Data Export -->
    <div class="glass-card p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-semibold text-white">Raw Data Export</h3>
        <div class="flex gap-2">
          <button id="export-json-btn" class="glass-button px-4 py-2 text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200">
            Export JSON
          </button>
          <button id="export-csv-btn" class="glass-button px-4 py-2 text-white/80 hover:text-white border border-white/20 hover:border-white/40 rounded transition-all duration-200">
            Export CSV
          </button>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div>
          <h4 class="text-lg font-medium text-white mb-3">Health Data Preview</h4>
          <div class="bg-black/40 p-4 rounded-lg h-64 overflow-auto">
            <pre id="raw-health-data" class="text-green-400 text-xs font-mono whitespace-pre-wrap">Loading health data...</pre>
          </div>
        </div>

        <div>
          <h4 class="text-lg font-medium text-white mb-3">Export Options</h4>
          <div class="space-y-4">
            <div>
              <label class="flex items-center">
                <input type="checkbox" id="include-historical" class="mr-2">
                <span class="text-white/80">Include Historical Data (Last 24h)</span>
              </label>
            </div>
            <div>
              <label class="flex items-center">
                <input type="checkbox" id="include-metrics" class="mr-2" checked>
                <span class="text-white/80">Include Performance Metrics</span>
              </label>
            </div>
            <div>
              <label class="flex items-center">
                <input type="checkbox" id="include-errors" class="mr-2" checked>
                <span class="text-white/80">Include Error Logs</span>
              </label>
            </div>
            <div>
              <label class="block text-white/80 mb-2">Time Range:</label>
              <select id="time-range" class="w-full bg-black/40 text-white border border-white/20 rounded px-3 py-2">
                <option value="1h">Last Hour</option>
                <option value="6h">Last 6 Hours</option>
                <option value="24h" selected>Last 24 Hours</option>
                <option value="7d">Last 7 Days</option>
              </select>
            </div>
            <button id="generate-report-btn" class="w-full glass-button px-4 py-3 bg-blue-500/20 text-blue-300 hover:bg-blue-500/30 border border-blue-500/50 hover:border-blue-500/70 rounded-lg transition-all duration-200">
              Generate Detailed Report
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<!-- DRY/SOLID/Astro MCP Implementation - External TypeScript File -->
<script type="module" src="/src/scripts/health-dashboard-init.ts" is:inline></script>