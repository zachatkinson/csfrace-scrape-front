# =============================================================================
# ASTRO DEVELOPMENT ENVIRONMENT VARIABLES
# Loaded automatically when NODE_ENV=development
# =============================================================================

# =============================================================================
# DEVELOPMENT API CONFIGURATION
# =============================================================================
# Browser calls nginx proxy (unified origin for cookies)
PUBLIC_API_BASE_URL=http://localhost

# Server Islands use nginx proxy in development
SERVER_API_BASE_URL=http://localhost

# Development timeouts
PUBLIC_API_TIMEOUT=15000

# =============================================================================
# DEVELOPMENT DEBUGGING
# =============================================================================
PUBLIC_DEBUG_MODE=true
PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
PUBLIC_LOG_LEVEL=debug

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
PUBLIC_ENABLE_HOT_RELOAD=true
PUBLIC_ENABLE_DEV_TOOLS=true
PUBLIC_SHOW_DEBUG_INFO=true

# =============================================================================
# DEVELOPMENT PORTS
# =============================================================================
PUBLIC_FRONTEND_PORT=3000
PUBLIC_BACKEND_PORT=8000