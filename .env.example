# =============================================================================
# ASTRO ENVIRONMENT VARIABLES EXAMPLE
# Copy this file to .env and customize for your environment
# Following Astro's official best practices
# =============================================================================

# =============================================================================
# API CONFIGURATION (Required)
# =============================================================================
# Browser-accessible API URL (PUBLIC_ prefix exposes to client)
PUBLIC_API_BASE_URL=http://localhost:8000

# Server-only API URL (for Server Islands, SSR)
# - Development: http://localhost:8000
# - Production Docker: http://backend:8000
SERVER_API_BASE_URL=http://localhost:8000

# API timeout in milliseconds
PUBLIC_API_TIMEOUT=30000

# =============================================================================
# FRONTEND CONFIGURATION (Optional)
# =============================================================================
PUBLIC_FRONTEND_PORT=3000
PUBLIC_THEME=light
PUBLIC_MONITORING_ENABLED=true

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
PUBLIC_ENABLE_OAUTH=true
PUBLIC_ENABLE_WEBAUTHN=true
PUBLIC_ENABLE_BATCH_PROCESSING=true
PUBLIC_MAX_CONCURRENT_JOBS=5

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS (Optional)
# =============================================================================
PUBLIC_DEBUG_MODE=false
PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
PUBLIC_LOG_LEVEL=info

# =============================================================================
# NOTES:
# =============================================================================
# - Variables with PUBLIC_ prefix are accessible in both client and server code
# - Variables without PUBLIC_ prefix are server-only (secure)
# - Astro automatically loads:
#   * .env.development when NODE_ENV=development
#   * .env.production when NODE_ENV=production
#   * .env for default values in all environments
# =============================================================================