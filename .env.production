# =============================================================================
# ASTRO PRODUCTION ENVIRONMENT VARIABLES  
# Loaded automatically when NODE_ENV=production
# =============================================================================

# =============================================================================
# PRODUCTION API CONFIGURATION
# =============================================================================
# Browser calls nginx proxy (unified origin for cookies)
PUBLIC_API_BASE_URL=http://localhost

# Server Islands use nginx proxy in production
SERVER_API_BASE_URL=http://localhost

# Production timeouts (longer for stability)
PUBLIC_API_TIMEOUT=30000

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================
PUBLIC_DEBUG_MODE=false
PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
PUBLIC_LOG_LEVEL=warn

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================
PUBLIC_ENABLE_HOT_RELOAD=false
PUBLIC_ENABLE_DEV_TOOLS=false
PUBLIC_SHOW_DEBUG_INFO=false

# =============================================================================
# PRODUCTION FEATURES
# =============================================================================
PUBLIC_ENABLE_ANALYTICS=true
PUBLIC_ENABLE_ERROR_REPORTING=true
PUBLIC_ENABLE_COMPRESSION=true

# =============================================================================
# PRODUCTION PORTS
# =============================================================================
PUBLIC_FRONTEND_PORT=3000
PUBLIC_BACKEND_PORT=8000